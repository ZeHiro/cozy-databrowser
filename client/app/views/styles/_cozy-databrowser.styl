// CLASS
.results-global-controls
  border-bottom: 1px solid #e5e5e5
  background-color: bgcolor
  min-height: 41px
  line-height: 40px
  padding: 0 12px 0 0
  display: block
  width: 100%
  z-index: 10
  position: fixed
  top: 0
  width: 100%

.current-title
  margin: 0 0 12px
  border-bottom: 1px dotted #e2e2e2
  padding-bottom: 16px
  padding-top: 7px

.current-title h1
  padding: 0
  margin: 0 8px
  font-size: 24px

.nav-list > li > .submenu > li > .submenu > li:before
  content: ""
  display: inline-block
  position: absolute
  width: 14px
  left: 20px
  top: 17px
  border-top: 1px dotted #9dbdd6

.panel-title
  position: relative


.result-buttons
  position: absolute
  top:0
  right:0
  margin:5px

.results-global-controls .result-buttons
  position: fixed

.btn-xs > [class*="icon-"], .btn-minier > [class*="icon-"]
  margin-right:0

.page-content
  padding-top : 51px
