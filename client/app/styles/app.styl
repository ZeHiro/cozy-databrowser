@import 'cozy-ui'

[role=application]
    @extend $app-2panes-toolbar

    > aside
        padded()
        background-color grey-01
        border-right 1px solid grey-03
        ul
            reset()
        li
            padding 3px
            list-style-type none
        a
            color black
            text-decoration none
        a.selected
            font-weight bold

    [role=toolbar]
        background-color white
        display flex

        [formaction="drawer/toggle"]
            padding    0
            flex-basis 2.25em

    [role=contentinfo]
        background-color white
